<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cvThumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <!--<com.android.volley.toolbox.NetworkImageView-->
            <!--android:id="@+id/ivThumbnail"-->
            <!--android:layout_width="160dp"-->
            <!--android:layout_height="240dp"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:adjustViewBounds="true"/>-->

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/ivThumbnail"
                android:layout_width="160dp"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">
                <RelativeLayout
                    android:id="@+id/rlPopularity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_gravity="bottom">
                    <ImageView
                        android:id="@+id/ivPopularity"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_whatshot_white_24dp"
                        android:tint="@color/red"/>
                    <TextView
                        android:id="@+id/tvMoviePopularity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/textColorWhite"
                        android:textStyle="bold"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="2dp"
                        android:layout_alignBaseline="@id/ivPopularity"
                        android:layout_toRightOf="@id/ivPopularity"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/rlPopularity">
                    <ImageView
                        android:id="@+id/ivRating"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_star_white_24dp"
                        android:tint="@color/yellow"/>
                    <TextView
                        android:id="@+id/tvMovieRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/textColorWhite"
                        android:layout_marginTop="1dp"
                        android:layout_alignBaseline="@id/ivRating"
                        android:layout_toRightOf="@id/ivRating"/>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/textColorWhite"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_below="@id/cvThumbnail"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@id/cvThumbnail"/>

        <TextView
            android:id="@+id/tvGenre"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/textColorWhite"
            android:layout_below="@id/tvTitle"
            android:layout_alignLeft="@id/cvThumbnail"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>
</RelativeLayout>

